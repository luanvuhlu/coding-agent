{
  "id": "jwt-authentication",
  "name": "JWT Authentication",
  "description": "Stateless token-based authentication with Spring Security and JWT",
  "complexity": "high",
  "keywords": ["jwt", "authentication", "auth", "token", "security", "login", "bearer", "stateless", "spring-security"],
  
  "steps": [
    {
      "title": "Create JWT Service",
      "description": "Generate and validate JWT tokens",
      "files": [
        {
          "language": "java",
          "path": "code/java/JwtService.java"
        }
      ]
    },
    {
      "title": "Create JWT Filter",
      "description": "Intercept requests and authenticate via token",
      "files": [
        {
          "language": "java",
          "path": "code/java/JwtAuthenticationFilter.java"
        }
      ]
    },
    {
      "title": "Configure Security",
      "description": "Register JWT filter in Spring Security chain",
      "files": [
        {
          "language": "java",
          "path": "code/java/SecurityConfig.java"
        }
      ]
    },
    {
      "title": "Add Tests",
      "description": "Test token generation and validation",
      "files": [
        {
          "language": "java",
          "path": "code/java/JwtServiceTest.java"
        }
      ]
    }
  ],
  
  "dependencies": [
    "spring-boot-starter-security",
    "io.jsonwebtoken:jjwt-api:0.11.5",
    "io.jsonwebtoken:jjwt-impl:0.11.5",
    "io.jsonwebtoken:jjwt-jackson:0.11.5"
  ],
  
  "configuration": {
    "application.yml": [
      "jwt:",
      "  secret: ${JWT_SECRET}",
      "  expiration: 3600000  # 1 hour"
    ],
    "environment": [
      "JWT_SECRET=your-256-bit-secret-here"
    ]
  },
  
  "notes": [
    "Never store JWT_SECRET in code or version control",
    "Use short expiration times (15-60 min) for access tokens",
    "JWT payload is base64-encoded, not encrypted - don't store sensitive data",
    "Add filter before UsernamePasswordAuthenticationFilter in security chain"
  ]
}
