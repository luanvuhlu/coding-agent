{
  "id": "controller-layer",
  "name": "REST Controller Layer",
  "description": "REST API controller layer to handle HTTP requests and map to service methods",
  "complexity": "low",
  "keywords": ["controller", "rest", "api", "endpoint", "http", "@restcontroller", "request", "response", "mapping"],
  
  "steps": [
    {
      "title": "Create Request DTO",
      "description": "Define request payload structure with validation",
      "files": [
        {
          "language": "java",
          "path": "code/java/EntityCreateRequest.java"
        }
      ]
    },
    {
      "title": "Create Response DTO",
      "description": "Define response data structure",
      "files": [
        {
          "language": "java",
          "path": "code/java/EntityResponse.java"
        }
      ]
    },
    {
      "title": "Create REST Controller",
      "description": "Handle HTTP requests and map to service methods",
      "files": [
        {
          "language": "java",
          "path": "code/java/EntityController.java"
        }
      ]
    },
    {
      "title": "Add Controller Tests",
      "description": "Test endpoints with MockMvc",
      "files": [
        {
          "language": "java",
          "path": "code/java/EntityControllerTest.java"
        }
      ]
    }
  ],
  
  "dependencies": [
    "spring-boot-starter-web",
    "spring-boot-starter-validation"
  ],
  
  "notes": [
    "Controllers only handle HTTP concerns - no business logic",
    "Use @RestController for JSON responses (combines @Controller + @ResponseBody)",
    "Validate requests with @Valid on DTOs",
    "Keep methods thin - delegate to service layer immediately",
    "Use @ControllerAdvice for centralized exception handling",
    "Return ResponseEntity for explicit HTTP status control"
  ]
}
