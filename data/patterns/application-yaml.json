{
  "id": "application-yaml",
  "name": "Spring Boot Application Configuration",
  "description": "Configure Spring Boot application properties with application.yaml",
  "complexity": "low",
  "keywords": ["configuration", "application.yaml", "properties", "config", "database", "datasource", "liquibase", "flyway", "logging"],
  
  "configurations": [
    {
      "name": "Server Configuration",
      "yaml": [
        "server:",
        "  port: 8080"
      ]
    },
    {
      "name": "Database (PostgreSQL)",
      "dependencies": ["spring-boot-starter-data-jpa", "postgresql"],
      "yaml": [
        "spring:",
        "  datasource:",
        "    url: jdbc:postgresql://localhost:5432/mydb",
        "    username: ${DB_USER}",
        "    password: ${DB_PASSWORD}",
        "    hikari:",
        "      maximum-pool-size: 10",
        "      minimum-idle: 5",
        "  jpa:",
        "    hibernate:",
        "      ddl-auto: validate",
        "    show-sql: false",
        "    properties:",
        "      hibernate:",
        "        format_sql: true",
        "        dialect: org.hibernate.dialect.PostgreSQLDialect"
      ]
    },
    {
      "name": "Liquibase Migration",
      "dependencies": ["liquibase-core"],
      "yaml": [
        "spring:",
        "  liquibase:",
        "    enabled: true",
        "    change-log: classpath:db/changelog/db.changelog-master.yaml"
      ]
    },
    {
      "name": "Flyway Migration",
      "dependencies": ["flyway-core"],
      "yaml": [
        "spring:",
        "  flyway:",
        "    enabled: true",
        "    locations: classpath:db/migration",
        "    baseline-on-migrate: true"
      ]
    },
    {
      "name": "Logging Levels",
      "yaml": [
        "logging:",
        "  level:",
        "    root: INFO",
        "    com.example: DEBUG",
        "    org.hibernate.SQL: DEBUG"
      ]
    },
    {
      "name": "Profile Configuration",
      "yaml": [
        "spring:",
        "  profiles:",
        "    active: ${SPRING_PROFILE:dev}"
      ]
    }
  ],
  
  "notes": [
    "Use environment variables for sensitive data (DB_USER, DB_PASSWORD)",
    "Set hibernate.ddl-auto to 'validate' in production (use migrations instead)",
    "Use profiles (dev, staging, prod) for environment-specific configs",
    "Never commit passwords or secrets to version control",
    "Set show-sql to false in production to avoid log bloat"
  ]
}
